extends layout

block content
  h1 Login
  if errors
    each error in errors
      p(style="color:red") #{error.msg}
  form(method="POST", action="/login")
    #form-group-email.form-group
       label(for="email") Email
       input#email.input-control(name="email", type="text")
    #form-group-password.form-group
       label(for="password") Password
       input#password.input-control(name="password", type="password")
    #form-group-submit.form-group
       input.btn.btn-primary.input-control(type="submit", value="Login")