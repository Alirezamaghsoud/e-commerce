extends layout

block append head 
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
  link(rel='stylesheet' href='/stylesheets/login_form.css')
  link(rel='stylesheet' href='/stylesheets/main.css')

block content

   div.main-container
      .login-container
            h2.login_title Login
            form(method="POST", action="/users/login")
               
               div.form-group
                  div.form-label(for="email") Enter Email Address:
                  input#email.form-control(name="email" type="email" required)
                  if errors
                     each error in errors
                        if error.param == 'email'
                           span(style="color:red") #{error.msg}
               
               div.form-group
                  div.form-label(for="password") Password:
                  input#password.form-control(name="password", type="password" required)
                  if errors
                     each error in errors
                        if error.param == 'password'
                           span(style="color:red") #{error.msg}

               .button-container
                  button.button(type="submit", value="Login") Login
      .picture-container