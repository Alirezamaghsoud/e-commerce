extends layout

block append head 
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
  link(rel='stylesheet' href='/stylesheets/login_form.css')
  link(rel='stylesheet' href='/stylesheets/main.css')

block content

   div.main-container
      .login-container
            h1 Login
            //- if errors
            //-    each error in errors
            //-       p(style="color:red") #{error.msg}

            form(method="POST", action="/users/login")
            
               div.label-control(for="email") Enter Email Address:
               input#email.input-control(name="email", type="text")
               if errors
                  each error in errors
                     if error.param == 'email'
                        span(style="color:red") #{error.msg}
               div.label-control(for="password") Password:
               input#password.input-control(name="password", type="password")
               if errors
                  each error in errors
                     if error.param == 'password'
                        span(style="color:red") #{error.msg}

               .button-container
                  button.button(type="submit", value="Login") Login
      .picture-container