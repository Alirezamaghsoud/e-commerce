extends layout 

block append head 
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
  link(rel='stylesheet' href='/stylesheets/product_form.css')
  link(rel='stylesheet' href='/stylesheets/main.css')

block content 

  .main-container
    .form-container
      h1 #{title} : #{product.name}
      p.confirm-text #[strong Do you really want to delete this product?]

      form(method='POST' action='')
        div.form-group 
          input#productid.form-control(type='hidden'
          name='productid'
          required='true'
          value=product._id
          )

          .button-container
            button.button-delete(type='submit') Delete

