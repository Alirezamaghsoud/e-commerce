block content
    h1=title
    p Welcome to #{title}
    h2 Account Details
    //- div Type : #{user.type}
    div Name : #{user.name}
    div Email : #{user.email}
    //- #{user.phoneNumber}
    br
    each order in orders
        div #{order.order_date}
        each orderitem in order.order_items
            div name:#{orderitem.product_name}
            div size: #{orderitem.size}
            div color : #{orderitem.color}
            div quantity : #{orderitem.quantity}
            div product_img : #{orderitem.product_img}
            div price_per_unit: #{orderitem.price_per_unit}  