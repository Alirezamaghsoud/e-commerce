block content
  h1= title
  p Welcome to #{title}
    div id:#{product.id}
    div name:#{product.name}
    div price: #{product.price}
    div category : #{product.category}
    div image : #{product.image}
    div posted_by : #{product.posted_by}
    div color:
      each color in product.color
        div #{color}
    div size:
      each size in product.size
        div #{size}
    div image:
      each image in product.image
        div #{image}
      a(href="" + product._id,class='btn btn-danger') Delete
      a(href="" + product._id,class='btn btn-primary') Edit
      